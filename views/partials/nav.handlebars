<header>
  <nav>
    <div class="logo"><a href="/">P_Blog</a></div>

    {{#if userStatus.login}}

      <div class="user_pic">
        <img src="{{url}}" />
      </div>

      <div class="modal">
        <div class="sub-menu-wrapper">
          <div class="sub-menu">
            <div class="user-info">
              <img class="userPic" src="{{url}}" />
              <h3>{{userStatus.name}}</h3>
            </div>
            <hr />

            <a href="/welcome" class="sub-menu-link">
              <svg
                class="icons"
                style="width:24px;height:24px"
                viewBox="0 0 24 24"
              >
                <path
                  fill="currentColor"
                  d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                ></path>
              </svg>
              {{! <img src="images/profile.png" alt="user pic"> }}
              <p>View profile</p>

              <span>></span>
            </a>

            <a href="/newpost" class="sub-menu-link">
              <svg class="icons"
                fill="currentColor"
                width="24px"
                height="24px"
                viewBox="0 0 32 32"
                style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2;"
                version="1.1"
