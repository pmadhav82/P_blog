<style>

.main-wrapper{
  
position: absolute;
top: 0;
left: 0;
  background-color: #F5F5F5;
width: 100%;
height: 100%;
  
  display: flex;
  flex-direction: column;
  align-items: center;

}

.form-wrapper{
  width: 100%;
  background-color: #ffffff;
   max-width:500px;
 margin-top: 1rem;
  padding: .5rem;
}

.form-controller{
  margin: 1rem .5rem;

  gap:.5rem;
  display:flex;
  flex-direction:column;
}
.form-controller label{
  font-size: 1.25rem;
  
}
.form-controller input{
  padding: .3em;
  outline: none;
  font-size: 1rem;
  border: 2px solid rgb(212,212,212);
  border-radius: 0.375rem;
  line-height:1.5;
  transition: all 0.3s;
}
.form-controller input:focus, .form-controller textarea:focus{
  border-color: blue;
}


input[type = "submit"]{
  cursor:pointer;
  background-color: #3b49df;
  border: none;
  color:#f9f9f9;
  margin: .5rem;
  display:inline-block;
  text-align:center;
  height: 32px;
}

input[type = "submit"]:hover{
  background-color: blue;
}
  
.messages{
  margin: .5rem;
  color:red;
}
</style>

<div class="main-wrapper">


<div class="form-wrapper">
    <h2>Enter new password</h2>

    <div class="messages">
    {{>message}}
      
    </div>
  <form action="/forgot-pass/password-reset-link?token={{token}}&id={{id}}" method="POST">  




<div class = "form-controller">

<label > Password </label>
  <input  type="password" name="password">
  </div>

<div class="form-controller">

<label > Repeat Password </label>
<input type="password" name="passwordRepeat">
</div>

<input type="submit" value="Change password"/>
 
  </form>

</div>

</div>